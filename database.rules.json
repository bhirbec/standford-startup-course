{
  "rules": {
    "admin": {
      ".read": true
    },
    "invites": {
      ".write": "auth.uid !== null"
    },
    "profile": {
      ".read": true,
      "$uid": {
        "flash": {
          ".write": "auth.uid === $uid"
        },
        "view": {
          ".write": "auth.uid === $uid"
        },
        "reviewsSent": {
          ".write": "auth.uid === $uid"
        },
        "onboarded": {
          ".write": "auth.uid === $uid"
        }
      }
    },
    "queue": {
      ".read": false,
      ".write": "auth.uid !== null"
    },
    "feedback": {
      ".write": true
    }
  }
}
