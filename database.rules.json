{
  "rules": {
    "admin": {
      ".read": true
    },
    "invites": {
      ".write": "auth.uid !== null"
    },
    "profile": {
      ".read": true,
      "$uid": {
        "flash": {
          ".write": "auth.uid === $uid"
        },
        "view": {
          ".write": "auth.uid === $uid"
        },
        "reviewsSent": {
          ".write": "auth.uid === $uid"
        }
      }
    },
    "queue": {
      ".read": false,
      ".write": "auth.uid !== null"
    },
    "publicReviews": {
      ".read": true,
      ".indexOn": ["fromUid", "toUid"],
      "$revId": {
        ".write": "newData.child('fromUid').val() === auth.uid && (!data.exists() || (newData.child('fromUid').val() === data.child('fromUid').val() && newData.child('toUid').val() === data.child('toUid').val()))"
      }
    }
  }
}
