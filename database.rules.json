{
  "rules": {
    "profile": {
      ".read": true,
      "$uid": {
        "info": {
          ".write": "auth.uid === $uid"
        },
        "experience": {
          ".write": "auth.uid === $uid"
        },
        "ts": {
          ".write": "auth.uid !== null"
        }
      }
    },
    "publicReviews": {
      ".read": true,
      ".indexOn": ["fromUid", "toUid"],
      "$revId": {
        ".write": "data.exists() ? newData.child('fromUid').val() === data.child('fromUid').val() : newData.child('fromUid').val() === auth.uid"
      }
    }
  }
}
